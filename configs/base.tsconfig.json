{
  "compilerOptions": {
    "noEmitOnError": false,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "jsx": "preserve",
    "outDir": "./out",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["reflect-metadata", "jest", "node"]
  },
  "include": ["dev-packages/*/src", "packages/*/src", "examples/**/*", "**/**.js"]
}
