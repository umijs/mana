{
  "compilerOptions": {
    "composite": true,
    "noEmitOnError": false,
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "jsx": "preserve",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["reflect-metadata", "jest", "node"]
  }
}
